generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  status    Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  notifications Notification[]
  announcements Announcement[]
  chatChannels  ChatChannel[]

  @@map("accounts")
}

model User {
  id        Int     @id @default(autoincrement())
  accountId Int     @map("account_id")
  name      String  @db.VarChar(255)
  email     String  @unique @db.VarChar(255)
  isActive  Boolean @default(true) @map("is_active")

  notifications      Notification[]
  chatChannelMembers ChatChannelMember[]
  chatMessages       ChatMessage[]

  @@map("users")
}

model Notification {
  id               Int       @id @default(autoincrement())
  accountId        Int       @map("account_id")
  userId           Int       @map("user_id")
  notificationType String?   @map("notification_type") @db.VarChar(100)
  title            String    @db.VarChar(255)
  message          String?   @db.Text
  entityType       String?   @map("entity_type") @db.VarChar(100)
  entityId         Int?      @map("entity_id")
  channels         Json      @default("[\"in_app\"]")
  priority         Int       @default(2)
  isRead           Boolean   @default(false) @map("is_read")
  readAt           DateTime? @map("read_at")
  actionUrl        String?   @map("action_url") @db.VarChar(500)
  createdAt        DateTime  @default(now()) @map("created_at")

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

model Announcement {
  id                Int       @id @default(autoincrement())
  accountId         Int       @map("account_id")
  title             String    @db.VarChar(255)
  content           String    @db.Text
  announcementType  String?   @map("announcement_type") @db.VarChar(100)
  priority          Int       @default(2)
  publishedByUserId Int?      @map("published_by_user_id")
  publishedAt       DateTime? @map("published_at")
  targetAudience    Json      @default("{}") @map("target_audience")
  isPinned          Boolean   @default(false) @map("is_pinned")
  attachments       Json      @default("[]")
  expiresAt         DateTime? @map("expires_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @default(now()) @updatedAt @map("updated_at")

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("announcements")
}

model ChatChannel {
  id                 Int      @id @default(autoincrement())
  accountId          Int      @map("account_id")
  channelType        String?  @map("channel_type") @db.VarChar(50)
  name               String?  @db.VarChar(255)
  description        String?  @db.Text
  projectId          Int?     @map("project_id")
  constructionSiteId Int?     @map("construction_site_id")
  teamId             Int?     @map("team_id")
  createdByUserId    Int?     @map("created_by_user_id")
  isPrivate          Boolean  @default(false) @map("is_private")
  settings           Json     @default("{}")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @default(now()) @updatedAt @map("updated_at")

  account  Account             @relation(fields: [accountId], references: [id], onDelete: Cascade)
  members  ChatChannelMember[]
  messages ChatMessage[]

  @@map("chat_channels")
}

model ChatChannelMember {
  id         Int       @id @default(autoincrement())
  channelId  Int       @map("channel_id")
  userId     Int       @map("user_id")
  role       String?   @db.VarChar(50)
  joinedAt   DateTime  @default(now()) @map("joined_at")
  lastReadAt DateTime? @map("last_read_at")
  isMuted    Boolean   @default(false) @map("is_muted")

  channel ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@map("chat_channel_members")
}

model ChatMessage {
  id               Int       @id @default(autoincrement())
  channelId        Int       @map("channel_id")
  userId           Int?      @map("user_id")
  messageText      String?   @map("message_text") @db.Text
  messageType      String    @default("text") @map("message_type") @db.VarChar(50)
  attachments      Json      @default("[]")
  replyToMessageId Int?      @map("reply_to_message_id")
  reactions        Json      @default("{}")
  isEdited         Boolean   @default(false) @map("is_edited")
  editedAt         DateTime? @map("edited_at")
  isDeleted        Boolean   @default(false) @map("is_deleted")
  deletedAt        DateTime? @map("deleted_at")
  createdAt        DateTime  @default(now()) @map("created_at")

  channel        ChatChannel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user           User?        @relation(fields: [userId], references: [id])
  replyToMessage ChatMessage? @relation("MessageReplies", fields: [replyToMessageId], references: [id])
  replies        ChatMessage[] @relation("MessageReplies")

  @@index([channelId])
  @@index([userId])
  @@index([createdAt])
  @@map("chat_messages")
}
